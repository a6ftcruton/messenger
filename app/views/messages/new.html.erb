<%= form_for @message do |m| %>
  <%= m.label :recipient_id, "To:" %>
  <%= m.collection_select :recipient_id, User.all, :id, :username %><br/>

  <%= m.label :subject, "Subject:" %>
  <%= m.text_field :subject %><br/>

  <%= m.label :body, "Message:" %><br/>
  <%= m.text_area(:body, size:"40x10") %><br/>

  <%= m.hidden_field :sender_id, :value => current_user.id  %>
  <%= m.submit "Send Message" %>
<% end %>
